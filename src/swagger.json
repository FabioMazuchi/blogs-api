{
  "swagger": "2.0",
  "info": {
    "version": "0.1",
    "title": "API de Blog",
    "description": "Aplicação para manipulação de blog",
    "contact": {
      "email": "mazuchi.augusto@hotmail.com"
    }
  },
  "host": "blogs-api-production-9bc1.up.railway.app",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "authentication": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Realizar o login",
        "description": "Rota responável pelo login",
        "tags": [
          "Login"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "operationId": "ListFeatures",
        "responses": {
          "200": {
            "description": "Token"
          }
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Cadastrar usuário",
        "description": "Rota responável por cadastrar um novo usuário",
        "security": {
         "authentication":[]
        },
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Token"
          }
        }
      },
      "get": {
        "summary": "Buscar usuários",
        "description": "Buscar informações sobre usuários cadastrados",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Resposta da busca por usuários",
            "schema": {
              "type": "object",
              "properties": {
                "users": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "displayName": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "summary": "Buscar usuário por ID",
        "description": "Buscar informações sobre usuário cadastrado",
        "parameters":[
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do usuário",
            "schema":{
              "type":"integer"
            }
            
          }
        ],
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Resposta da busca por usuário",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "displayName": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Excluir usuário",
        "description": "Excluir informações sobre usuário cadastrado",
           "parameters":[
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do usuário",
            "schema":{
              "type":"integer"
            }
            
          }
        ],
        "tags": [
          "Users"
        ],
        "responses": {
          "204": {
            "description": "Resposta da exclusão do usuário",
            "schema": {
              "type": "object"
            }
          }
        }
      }
    },
    "/categories": {
      "post": {
        "summary": "Cadastrar uma categoria",
        "description": "Rota responável por cadastrar uma nova categoria",
        "tags": [
          "Categories"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Categorie"
            }
          }
        ],
        "operationId": "ListFeatures",
        "responses": {
          "201": {
            "description": "Resposta do cadastro de uma nova categoria",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Buscar categpries",
        "description": "Buscar informações sobre categorias cadastrados",
        "tags": [
          "Categories"
        ],
        "responses": {
          "200": {
            "description": "Resposta da busca por categorias",
            "schema": {
              "type": "object",
              "properties": {
                "categories": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/post": {
      "post": {
        "summary": "Cadastrar um post",
        "description": "Rota responável por cadastrar uma novo post",
        "tags": [
          "Posts"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Post"
            }
          }
        ],
        "operationId": "ListFeatures",
        "responses": {
          "201": {
            "description": "Resposta do cadastro de uma nova categoria",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                },
                "userId": {
                  "type": "integer"
                },
                "published": {
                  "type": "string",
                  "format": "date-time"
                },
                "updated": {
                  "type": "string",
                  "format": "date-time"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Buscar posts",
        "description": "Buscar informações sobre posts cadastrados",
        "tags": [
          "Posts"
        ],
        "responses": {
          "200": {
            "description": "Resposta da busca por posts",
            "schema": {
              "type": "object",
              "properties": {
                "posts": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PostsResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/post/{id}": {
      "get": {
        "summary": "Buscar post",
        "description": "Buscar informações sobre post cadastrado",
        "tags": [
          "Posts"
        ],
        "responses": {
          "200": {
            "description": "Resposta da busca por post",
            "schema": {
              "type": "object",
              "$ref": "#/components/schemas/PostsResponse"
            }
          }
        }
      },
      "put": {
        "summary": "Atualizar um post",
        "description": "Rota responável por atualizar um post",
           "parameters":[
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do post",
            "schema":{
              "type":"integer"
            }
            
          }
        ],
        "tags": [
          "Posts"
        ],
        "responses": {
          "200": {
            "description": "Resposta do post atualizado",
            "schema": {
              "type": "object",
              "$ref": "#/components/schemas/PostsResponse"
            }
          }
        }
      },
      "delete": {
        "summary": "Excluir post",
        "description": "Excluir informações sobre o post cadastrado",
        "tags": [
          "Posts"
        ],
        "responses": {
          "204": {
            "description": "Resposta da exclusão do post",
            "schema": {
              "type": "object"
            }
          }
        }
      },
      "parameters":[
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do post",
            "schema":{
              "type":"integer"
            }
            
          }
        ]
    } 
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      },
      "Categorie": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "Post": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "categoryIds": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        }
      },
      "PostsResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "userId": {
            "type": "integer"
          },
          "published": {
            "type": "string",
            "format": "date-time"
          },
          "updated": {
            "type": "string",
            "format": "date-time"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "displayName": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "image": {
                "type": "string"
              }
            }
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "PostCategory": {
                  "type": "object",
                  "properties": {
                    "postId": {
                      "type": "integer"
                    },
                    "categoryId": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}