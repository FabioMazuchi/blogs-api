{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API de Blog",
    "description": "Aplicação para manipulação de um blog.",
    "contact": {
      "email": "mazuchi.augusto@hotmail.com"
    }
  },
  "host": "blogs-api-production-9bc1.up.railway.app",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Cadastrar usuário",
        "description": "Rota responável por cadastrar um novo usuário",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        ],
        "operationId": "ListFeatures",
        "responses": {
          "200": {
            "description": "Token"
          }
        }
      },
      "get": {
        "summary": "Buscar usuários",
        "description": "Buscar informações sobre usuários cadastrados",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Resposta da busca por usuários",
            "schema": {
              "type": "object",
              "properties": {
                "users": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "displayName": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "aaa.aaa.aaa"
          }
        ]
      }
    },
    "/user/id": {
      "get": {
        "summary": "Buscar usuário",
        "description": "Buscar informações sobre usuário cadastrado",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Resposta da busca por usuário",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "displayName": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "aaa.aaa.aaa"
          }
        ]
      }
    },
     "/user/me": {
      "delete": {
        "summary": "Excluir usuário",
        "description": "Excluir informações sobre usuário cadastrado",
        "tags": [
          "Users"
        ],
        "responses": {
          "204": {
            "description": "Resposta da exclusão do usuário",
            "schema": {
              "type": "object"
            }
          }
        },
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "aaa.aaa.aaa"
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      }
    }
  }
}